extends layout

block content
  h2 Edit Category
  ul
    li: a(href="../manage_categories") Back to Categories...
    li: a(href=`../delete_category/${category._id}`) Delete Category...
  form(action=category._id, method="post")
    label Name 
      input(type="text", name="name", autofocus=true, value=category.name)
    label List Order
      input(type="number", name="order", value=category.order)
    button(type="submit") Save Category
