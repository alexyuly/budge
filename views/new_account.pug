extends layout

block content
  h2 New Account
  ul
    a(href="../manage_accounts"): li Back to Accounts...
  form(action="new_account", method="post")
    label Name 
      input(type="text", name="name", autofocus=true)
    label Description 
      input(type="text", name="description")
    fieldset
      legend Users
      for user in user_list
        label
          input(type="checkbox", name=`user_${user._id}`)
          =user.name
    label List Order
      input(type="number", name="order")
    button(type="submit") Create New Account
